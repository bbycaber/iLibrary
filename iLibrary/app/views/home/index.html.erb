<h1>iLibrary</h1>


<%= form_tag('/home/index', method: "GET") do %> 
<%= text_field_tag :search, params[:search], :class=> "input-medium search-query" %>
<%= select_tag :category, options_for_select([['All'], ['Books'], ['Magazines'], ['Articles']]) %> 
<%= submit_tag :Search, :class => 'btn'%> 
<% end %>


<% @books.each do |book| %>
 
		<address>
			<strong><%= book.title%></strong><br>
			Code:  <%= book.code%><br>
			Pages : <%= book.num_page%><br>
			<abbr title="Themes">Themes:</abbr> <%= book.themes %>
			<%= link_to 'Show', book, :class => 'btn btn-link' %>
		</address>

 <% end %>

