<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Review</th>
      <th>Num page</th>
      <th>Book type</th>
      <th>Source</th>
      <th>Themes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.code %></td>
        <td><%= book.title %></td>
        <td><%= book.review %></td>
        <td><%= book.num_page %></td>
        <td><%= book.book_type %></td>
        <td><%= book.source %></td>
        <td><%= book.themes %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

